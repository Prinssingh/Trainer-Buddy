<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:src="@drawable/shape_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/blue_color">

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white_color"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="Welcome, Shubham"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white_color"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_below="@id/userName"
                android:textAlignment="center"
                android:text="This is your LoginID and Password"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/userid"
                    android:text="User ID"
                    style="@style/viewParent.headerText.HomeCardTitle" />

                <TextView
                    android:text="shubhasatna9074@gmail.com"
                    style="@style/viewParent.headerText.homeCardContent"
                    android:layout_below="@id/userid"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/userpassword"
                    android:text="User Password"
                    style="@style/viewParent.headerText.HomeCardTitle" />

                <TextView
                    android:text="9074644022"
                    style="@style/viewParent.headerText.homeCardContent"
                    android:layout_below="@id/userpassword"/>

            </RelativeLayout>
            <Button
                android:id="@+id/buttonOk"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background_blue"
                android:text="Ok"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>