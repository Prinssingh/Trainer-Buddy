<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/prelogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pre login"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>


        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="signupr"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/add_user_trainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add user trainer"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/all_user_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="all_user_list"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/home_trainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home trainer"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/profile_trainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="profile trainer"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/earnings_trainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="earning trainer"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>









</ScrollView>