<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="115dp">

    <RelativeLayout
        android:id="@+id/trainerEarningsClickSensor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/TraineeDetail"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/grey_color"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/profileImage">

                    <TextView
                        android:id="@+id/traineeNameEarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/white_color"
                        android:fontFamily="@font/cantora_one"
                        android:text="Shubham Singh"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/line"
                        style="@style/proifleDetailsView"
                        android:layout_width="150dp"
                        android:layout_below="@+id/traineeNameEarning"
                        android:layout_marginStart="1dp" />

                    <TextView
                        android:id="@+id/DateTimeEarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="1dp"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/cantora_one"
                        android:text="12:49 PM on 25 Dec 2020"
                        android:textSize="8sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/planNameEarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/DateTimeEarning"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/cantora_one"
                        android:text="6 Years Subscription"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/feeEarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="20sp"
                        android:textColor="@color/white_color"
                        android:text="\u20B9 1000"
                        android:fontFamily="@font/cantora_one"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/subscriptionLeftDetail"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profileImage"
                    android:layout_marginTop="5dp"
                    android:text="10 days left"
                    android:textAlignment="center"
                    android:textColor="@color/white_color"
                    android:textSize="8sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profileImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/traineeImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/shubham" />

                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>