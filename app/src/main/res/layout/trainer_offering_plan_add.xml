<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/offering_plan_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainerDashBoardUi.OfferingPlanAdd">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OfferingPlanAdd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <EditText
        android:id="@+id/offeringPlanAddTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Title"
        app:layout_constraintEnd_toEndOf="@+id/message"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="@+id/message"
        app:layout_constraintTop_toBottomOf="@+id/message" />

    <EditText
        android:id="@+id/offeringPlanAddAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="About"
        app:layout_constraintEnd_toEndOf="@+id/offeringPlanAddTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/offeringPlanAddTitle"
        app:layout_constraintTop_toBottomOf="@+id/offeringPlanAddTitle" />

    <EditText
        android:id="@+id/offeringPlanAddPrize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Prize"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="@+id/offeringPlanAddAbout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/offeringPlanAddAbout"
        app:layout_constraintTop_toBottomOf="@+id/offeringPlanAddAbout" />

    <EditText
        android:id="@+id/offeringPlanAddDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Days"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/offeringPlanAddPrize"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/offeringPlanAddPrize"
        app:layout_constraintTop_toBottomOf="@+id/offeringPlanAddPrize" />

    <Button
        android:id="@+id/offeringPlanAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="@+id/offeringPlanAddDays"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/offeringPlanAddDays"
        app:layout_constraintTop_toBottomOf="@+id/offeringPlanAddDays" />

</androidx.constraintlayout.widget.ConstraintLayout>