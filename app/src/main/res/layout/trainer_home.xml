<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white_color"
    android:focusableInTouchMode="true"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/TrainerSubscriptionDaysleft"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/grey_color"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:minHeight="100dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/TrainerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi, Shubham Singh"
                        android:textColor="@color/primary_sky_blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/progress_bar"
                                style="?android:progressBarStyleHorizontal"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="20dp"
                                android:indeterminateOnly="false"
                                android:progress="90"
                                android:progressDrawable="@drawable/progressbar"
                                android:rotation="-90" />

                            <TextView
                                android:id="@+id/textViewProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/progress_bar"
                                android:layout_alignTop="@+id/progress_bar"
                                android:layout_alignEnd="@+id/progress_bar"
                                android:layout_alignBottom="@+id/progress_bar"
                                android:gravity="center"
                                android:text="29\nDays"
                                android:textAlignment="center"
                                android:textColor="@color/primary_sky_blue"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/progress_bar"
                                android:gravity="center"
                                android:text="Validity"
                                android:textColor="@color/primary_sky_blue" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/progress_bar1"
                                style="?android:progressBarStyleHorizontal"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="20dp"
                                android:indeterminateOnly="false"
                                android:progress="90"
                                android:progressDrawable="@drawable/progressbar"
                                android:rotation="-90" />

                            <TextView
                                android:id="@+id/textViewProgress1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/progress_bar1"
                                android:layout_alignTop="@+id/progress_bar1"
                                android:layout_alignEnd="@+id/progress_bar1"
                                android:layout_alignBottom="@+id/progress_bar1"
                                android:gravity="center"
                                android:text="25"
                                android:textAlignment="center"
                                android:textColor="@color/primary_sky_blue"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/progress_bar1"
                                android:gravity="center"
                                android:text="Active Trainee"
                                android:textColor="@color/primary_sky_blue" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/progress_bar2"
                                style="?android:progressBarStyleHorizontal"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="20dp"
                                android:indeterminateOnly="false"
                                android:progress="90"
                                android:progressDrawable="@drawable/progressbar"
                                android:rotation="-90" />

                            <TextView
                                android:id="@+id/textViewProgress2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/progress_bar2"
                                android:layout_alignTop="@+id/progress_bar2"
                                android:layout_alignEnd="@+id/progress_bar2"
                                android:layout_alignBottom="@+id/progress_bar2"
                                android:gravity="center"
                                android:text="2400"
                                android:textAlignment="center"
                                android:textColor="@color/primary_sky_blue"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/progress_bar2"
                                android:gravity="center"
                                android:text="Month Earning"
                                android:textColor="@color/primary_sky_blue" />

                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/addPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/grey_color"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="7dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/addPaymenttxt"
                        style="@style/viewParent.headerText.HomeCardTitle1"
                        android:text=" Take Payment" />

                    <Button
                        android:id="@+id/getPlaymentButton"
                        style="@style/whiteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:text="Add"
                        android:textColor="@color/black_color" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AnnualIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/grey_color"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="7dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/MonthlyEarning"
                        style="@style/viewParent.headerText.HomeCardTitle1"
                        android:layout_centerInParent="true"
                        android:text="Your Annual Income" />

                    <TextView
                        android:id="@+id/addPaymenttxt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/MonthlyEarning"
                        android:layout_centerInParent="true"
                        android:text="₹500"
                        android:textColor="@color/white_color"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"
                        android:text="Your Total Income - ₹7500"
                        android:textColor="@color/white_color" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/TraineeDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/grey_color"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/TraineeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explore Now"
                        android:textColor="@color/primary_sky_blue"
                        android:textSize="20sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_side_bg" />

</RelativeLayout>