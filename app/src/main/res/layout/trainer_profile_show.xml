<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white_color"
    android:focusableInTouchMode="true"
    tools:ignore="HardcodedText"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/TraineeDetail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/grey_color"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profileImage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="120dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shubham"
                            android:contentDescription="profilepic" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/TraineeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi, Shubham"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/profileImage"
                        android:textColor="@color/white_color"
                        android:textSize="20sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/grey_color"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="15dp">

                <!--               <ImageView-->
                <!--                   android:layout_width="match_parent"-->
                <!--                   android:layout_height="match_parent"-->
                <!--                   android:scaleType="fitXY"-->
                <!--                   android:background="@color/grey_color"-->
                <!--                   android:src="@drawable/shape_cardview" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/nameImageView"
                            android:src="@drawable/name"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:id="@+id/nameTextView"
                            android:text="Name"
                            android:layout_toEndOf="@id/nameImageView"
                            style="@style/profileDetailsTextMain" />

                        <TextView
                            android:id="@+id/trainerName"
                            android:text="developer"
                            android:layout_toEndOf="@id/nameImageView"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>

                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/genderImageView"
                            android:src="@drawable/name"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:id="@+id/genderTextView"
                            android:text="Gender"
                            android:layout_toEndOf="@id/genderImageView"
                            style="@style/profileDetailsTextMain" />

                        <TextView
                            android:id="@+id/trainerGender"
                            android:text="Male"
                            android:layout_toEndOf="@id/genderImageView"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>

                    <!--                   <View style="@style/proifleDetailsView" />-->
                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/mobileImageView"
                            android:src="@drawable/phone"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Mobile"
                            android:layout_toRightOf="@id/mobileImageView"
                            style="@style/profileDetailsTextMain"/>

                        <TextView
                            android:id="@+id/trainerMobile"
                            android:text="+91-8129999999"
                            android:layout_toRightOf="@id/mobileImageView"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>

                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/alternateMobileImageView"
                            android:src="@drawable/phone"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Alternate Mobile"
                            android:layout_toRightOf="@id/alternateMobileImageView"
                            style="@style/profileDetailsTextMain"/>

                        <TextView
                            android:id="@+id/trainerAlternate"
                            android:text="+91-8129999999"
                            android:layout_toRightOf="@id/alternateMobileImageView"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>

                    <!--                   <View style="@style/proifleDetailsView" />-->
                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/emailImageView"
                            android:src="@drawable/mail"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Email"
                            android:layout_toRightOf="@id/emailImageView"
                            style="@style/profileDetailsTextMain" />

                        <TextView
                            android:id="@+id/trainerEmail"
                            android:text="developer@appsnipp.com"
                            android:layout_toRightOf="@id/emailImageView"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>



                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/aboutUs"
                            android:src="@drawable/name"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:id="@+id/aboutText"
                            android:text="About Us"
                            android:layout_toRightOf="@id/aboutUs"
                            style="@style/profileDetailsTextMain" />

                        <TextView
                            android:id="@+id/trainerAbout"
                            android:text="ab kya he batau apne baare me bs itna jaan lo ki tumhre bs ki baat ni h janna kyuki janne ke liye bhi to kuchh hona chahhiye jisse jaan sako aur wo hai ni ... bs bahut chutiyaap hogyi"
                            android:layout_toEndOf="@id/aboutUs"
                            android:layout_marginTop="20dp"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>

                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/gymNameImageView"
                            android:src="@drawable/address"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Gym Name"
                            android:layout_toRightOf="@id/gymNameImageView"
                            style="@style/profileDetailsTextMain" />

                        <TextView
                            android:id="@+id/trainerGymName"
                            android:text="Golden Fintness Club"
                            android:layout_toRightOf="@id/gymNameImageView"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>

                    <!--                   <View style="@style/proifleDetailsView" />-->
                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/addressImageView"
                            android:src="@drawable/address"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Address"
                            android:layout_toRightOf="@id/addressImageView"
                            style="@style/profileDetailsTextMain" />

                        <TextView
                            android:id="@+id/trainerAddress"
                            android:text="Avenue 2nd Street NW SY."
                            android:layout_toRightOf="@id/addressImageView"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>



                    <!--                   <View style="@style/proifleDetailsView" />-->
                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/dobImageView"
                            android:src="@drawable/dob"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="D.O.B"
                            android:layout_toRightOf="@id/dobImageView"
                            style="@style/profileDetailsTextMain" />

                        <TextView
                            android:id="@+id/trainerDOB"
                            android:text="12-05-1990"
                            android:layout_toRightOf="@id/dobImageView"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>

                    <!--                   <View style="@style/proifleDetailsView" />-->
                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/ageImageView"
                            android:src="@drawable/age"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Age"
                            android:layout_toRightOf="@id/ageImageView"
                            style="@style/profileDetailsTextMain" />

                        <TextView
                            android:id="@+id/trainerAge"
                            android:text="30 Years"
                            android:layout_toRightOf="@id/ageImageView"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>

                    <!--                   <View style="@style/proifleDetailsView" />-->
                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/heightImageView"
                            android:src="@drawable/height"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Height"
                            android:layout_toRightOf="@id/heightImageView"
                            style="@style/profileDetailsTextMain" />

                        <TextView
                            android:id="@+id/trainerHeight"
                            android:text="5'5"
                            android:layout_toRightOf="@id/heightImageView"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>

                    <!--                   <View style="@style/proifleDetailsView" />-->
                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/weightImageView"
                            android:src="@drawable/weight"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Weight"
                            android:layout_toRightOf="@id/weightImageView"
                            style="@style/profileDetailsTextMain" />

                        <TextView
                            android:id="@+id/trainerWeight"
                            android:text="65 KG"
                            android:layout_toRightOf="@id/weightImageView"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>

                    <!--                   <View style="@style/proifleDetailsView" />-->
                    <RelativeLayout style="@style/profileDetailsLayout">
                        <ImageView
                            android:id="@+id/foodImageView"
                            android:src="@drawable/food"
                            style="@style/profileDetailsImage" />

                        <TextView
                            android:text="Food"
                            android:layout_toRightOf="@id/foodImageView"
                            style="@style/profileDetailsTextMain"
                            />

                        <TextView
                            android:id="@+id/trainerFood"
                            android:text="Non Vegiteian"
                            android:layout_toRightOf="@id/foodImageView"
                            style="@style/profileDetailsMiniText" />

                    </RelativeLayout>

                    <!--                   <View style="@style/proifleDetailsView" />-->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/EditProfile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_gravity="end"
                        app:cardCornerRadius="120dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/edit_buttton_40" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_side_bg" />

</RelativeLayout>